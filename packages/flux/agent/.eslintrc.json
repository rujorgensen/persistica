{
    "extends": [
        "../../../.eslintrc.json"
    ],
    "ignorePatterns": [
        "!**/*"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "parserOptions": {
                "project": [
                    "apps/flux/agent/tsconfig.*?.json"
                ]
            },
            "rules": {}
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.json"
            ],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/dependency-checks": [
                    "error",
                    {
                        "ignoredFiles": [
                            "{projectRoot}/eslint.config.{js,cjs,mjs}",
                            "{projectRoot}/esbuild.config.{js,ts,mjs,mts}",
                            "{projectRoot}/vite.config.{js,ts,mjs,mts}"
                        ]
                    }
                ]
            }
        }
    ]
}
